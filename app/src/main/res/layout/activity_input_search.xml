<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputSearchActivity">

    <RelativeLayout
        android:id="@+id/userInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/wikepediaSearchTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Wikepedia Search"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/wikepediaSearchDesciptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wikepediaSearchTV"
            android:text="Feel free to search the whole universe" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wikepediaSearchDesciptionTV"
            android:layout_marginTop="20dp"
            android:background="#F0F2F5"
            android:orientation="horizontal"
            android:padding="15dp">

            <EditText
                android:id="@+id/inputQueryET"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#ffffff"
                android:textColorHint="#666666"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/searchResultSubmitButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:src="@drawable/search" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>