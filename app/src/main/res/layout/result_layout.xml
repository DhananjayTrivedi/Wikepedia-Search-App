<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".UI.SplashScreen"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:background="#ECF3FA">

    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/fullResultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/resultImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/wiki_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/resultTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Linkin Park"
                android:textColor="#555555"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/resultDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="American Rock BandAmerican Rock BandAmerican Rock BandAmerican Rock BandAmerican Rock BandAmerican Rock BandAmerican Rock BandAmerican Rock BandAmerican Rock Band"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>